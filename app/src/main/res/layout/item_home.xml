<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/titleRel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/brg_day"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/dateTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/promedium"
            android:gravity="center"
            android:text="Ngày 1"
            android:textColor="#3EB591"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/downImg"
            android:layout_width="23dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/img_down" />
    </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:paddingRight="20dp"
        android:layout_below="@id/titleRel"
        android:id="@+id/contentRel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/breakfastLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/breakfastTitileTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/promebold"
                android:gravity="center"
                android:text="- Bữa sáng:"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/breakfastTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/promedium"
                android:text="Cháo yến mạch và táo.Bạn có thể cho táo vào ăn chung với cháo hoặc dùng để ăn tráng miệng ở ngoài"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lunchLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lunchTitileTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/promebold"
                android:gravity="center"
                android:text="- Bữa trưa:"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lunchTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/promedium"
                android:layout_marginLeft="5dp"
                android:text="Cháo yến mạch và táo.Bạn có thể cho táo vào ăn chung với cháo hoặc dùng để ăn tráng miệng ở ngoài"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dinnerLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dinnerTitileTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/promebold"
                android:gravity="center"
                android:text="- Bữa tối:"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/dinnerTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/promedium"
                android:text="Cháo yến mạch và táo.Bạn có thể cho táo vào ăn chung với cháo hoặc dùng để ăn tráng miệng ở ngoài"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>